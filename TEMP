
#Button move to Right
def moveRight(event) :
    global grid, Index_Array, LocalOfgrid
    for k in range(len(grid)) :
        for l in range(len(grid[k])) :
            if grid[k][l] == 1 and l==len(grid[k])-1:
                grid[k][l] = 1
            elif l==Index_Array+1 and LocalOfgrid==k :
                grid[k][l] = 1
            else :
                grid[k][l] = 0

    arrayToDrawing()
    print(grid)

#Button move to Left    
def moveLeft(event) :
    global grid, Index_Array, LocalOfgrid
    for o in range(len(grid)) :
        for p in range(len(grid[o])) :
            if grid[o][p] == 1 and p==0:
                grid[o][p] = 1
            elif p==Index_Array-1 and LocalOfgrid==o :
                grid[o][p] = 1
            else :
                grid[o][p] = 0
    arrayToDrawing()
    print(grid)
    
#Button move to Down
def moveDown(event) :
    global SubNumber, MainNumber, Index, grid, Index_Array, LocalOfgrid, number
    for q in range(len(grid)) :
        for r in range(len(grid[q])) :                                     
            if grid[MainNumber][r] == 1 and MainNumber+1==len(grid) :
                grid[MainNumber][r] = 1
            elif grid[number+1][Index]==0 and LocalOfgrid == MainNumber-1 :
                grid[number+1][Index] = 1
            elif grid[number+1][Index]==1 and r==4:
                grid[number+1][Index]==1
                
            elif grid[MainNumber][r] == 1 and LocalOfgrid == MainNumber :
                grid[MainNumber][r] = 0
                number = MainNumber
                Index = r
            else :
                grid[MainNumber][r] = 0
        MainNumber += 1
    arrayToDrawing()
    print(grid)
    MainNumber = 0
    number = 0
    Index = 0

#Button move to Up
def moveUp(event) :
    global SubNumber, MainNumber, Index, grid, Index_Array, LocalOfgrid, number
    for a in range(len(grid)) :
        for b in range(len(grid[a])) :
            if grid[len(grid)-2][b]==0 and LocalOfgrid == MainNumber-1  :
                grid[len(grid)-2][b] = 0
            if grid[MainNumber][b] == 1 and MainNumber==0 :
                grid[MainNumber][b] = 1
            elif grid[number-1][Index]==0 and LocalOfgrid == MainNumber-1 :
                grid[number-1][Index] = 1
            elif LocalOfgrid == len(grid)-1 and grid[number-1][Index]==0 :
                grid[number-1][Index] = 1               

            elif grid[MainNumber][b] == 1 and LocalOfgrid == MainNumber :
                grid[MainNumber][b] = 0
                number = MainNumber
                Index = b
            else :
                grid[MainNumber][b] = 0
        MainNumber += 1
    arrayToDrawing()
    print(grid)
    MainNumber = 0
    number = 0
    Index = 0